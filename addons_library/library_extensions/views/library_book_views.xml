<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="library_book_view_tree_extension" model="ir.ui.view">
        <field name="name">library.book.view.tree.extension</field>
        <field name="model">library.book</field>
        <field name="inherit_id" ref="library.library_book_view_tree"/>
        <field name="arch" type="xml">
            <field name="isbn_13" position="after">
                <field name="author_id"/>
                <field name="category_id" widget="many2many_tags"/>
            </field>
        </field>
    </record>
    
    <record id="library_book_view_form_extension" model="ir.ui.view">
        <field name="name">library.book.view.form.extension</field>
        <field name="model">library.book</field>
        <field name="inherit_id" ref="library.library_book_view_form"/>
        <field name="arch" type="xml">
            <field name="isbn_13" position="after">
                <field name="author_id"/>
                <field name="category_id" widget="many2many_tags"/>
            </field>
        </field>
    </record>
</odoo>